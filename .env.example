# Bitcoin Core Tests Runner Configuration Example
# Copy this file to .env and modify as needed

# Repository Settings
BTC_REPO_URL=https://github.com/bitcoin/bitcoin
BTC_REPO_BRANCH=master
BTC_CLONE_TIMEOUT=600
BTC_CLONE_RETRIES=3
BTC_SHALLOW_CLONE=true

# Build Settings
BTC_BUILD_TYPE=RelWithDebInfo
BTC_BUILD_JOBS=4
BTC_ENABLE_TESTS=true

# Docker Settings
BTC_COMPOSE_FILE=docker-compose.yml
BTC_CONTAINER_NAME=bitcoin-tests
BTC_KEEP_CONTAINERS=false

# Network Settings
BTC_NETWORK_TIMEOUT=300
BTC_NETWORK_RETRIES=3

# Test Settings
BTC_TEST_TIMEOUT=3600
BTC_TEST_PARALLEL=true
BTC_TEST_JOBS=2

# Logging Settings
BTC_LOG_LEVEL=INFO
BTC_LOG_FILE=bitcoin-tests.log

# Security Settings
BTC_ALLOW_INSECURE_SSL=false

# Application Settings
BTC_DEBUG=false
BTC_DRY_RUN=false
BTC_VERBOSE=false
BTC_QUIET=false