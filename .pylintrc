[MASTER]
disable=
    C0103,  # invalid-name (test methods have long descriptive names)
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0415,  # import-outside-toplevel (intentional to avoid circular imports)
    C1803,  # use-implicit-booleaness-not-comparison (explicit is clearer in tests)
    E1101,  # no-member (pytest.mock exists, false positive)
    R0401,  # cyclic-import (some circular imports are intentional for type hints)
    R0402,  # consider-using-from-import (either style is fine in tests)
    R0801,  # duplicate-code (test patterns often similar)
    R0903,  # too-few-public-methods
    R0912,  # too-many-branches
    R0913,  # too-many-arguments (some functions need more arguments)
    R0915,  # too-many-statements
    R0917,  # too-many-positional-arguments (some functions need more arguments)
    W0201,  # attribute-defined-outside-init (common in pytest fixtures)
    W0212,  # protected-access (testing internal APIs is common)
    W0404,  # reimported (common in test isolation)
    W0511,  # fixme
    W0611,  # unused-import (imports may be needed for fixtures)
    W0613,  # unused-argument (pytest fixtures often appear unused)
    W0621,  # redefined-outer-name (sometimes unavoidable with imports)
    W0718,  # broad-exception-caught (intentional for robustness)
    W1510,  # subprocess-run-check (not always needed in tests)
    W1514,  # unspecified-encoding (acceptable in tests)
    line-too-long

[FORMAT]
max-line-length=100
good-names=i,j,k,ex,exc,Run,_,db,session,request,response,logger,fd,fp,ws,td,cmd,url

[MESSAGES CONTROL]
extension-pkg-whitelist=PyQt5,PyQt6,PySide2,PySide6

[REPORTS]
output-format=text
reports=no

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=no

[BASIC]
bad-names=foo,bar,baz,toto,tutu,tata
include-naming-hint=no
function-rgx=[a-z_][a-z0-9_]{2,30}$
variable-rgx=[a-z_][a-z0-9_]{2,30}$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
class-rgx=[A-Z_][a-zA-Z0-9]+$
method-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
argument-rgx=[a-z_][a-z0-9_]{2,30}$
class-attribute-rgx=([A-Za-z_][A-Za-z0-9_]{2,30}|(__.*__))$
inlinevar-rgx=[A-Za-z_][A-Za-z0-9_]*$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
no-docstring-rgx=__.*__

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=14
min-public-methods=2
max-public-methods=20

[IMPORTS]
deprecated-modules=regsub,TERMIOS,Bastion,rexec
import-graph=
ext-import-graph=
int-import-graph=

[EXCEPTIONS]
overgeneral-exceptions=builtins.Exception

# Note: For test files, many rules are relaxed because:
# - Test methods have long descriptive names (C0103)
# - Protected member access is common when testing internal APIs (W0212)
# - Unused arguments from pytest fixtures are normal (W0613)
# - Unused imports may be needed for fixtures (W0611)
# - Attributes defined outside __init__ is common in pytest (W0201)
# - Test code may have duplicate patterns (R0801)
# These are disabled globally above for simplicity
